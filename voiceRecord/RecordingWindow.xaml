<Window x:Class="voiceRecord.RecordingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:voiceRecord"
        mc:Ignorable="d"
        Title="RecordingWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="userLbl" Content="Label" HorizontalAlignment="Left" Margin="102,2,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="nextBtn" Content="Next" HorizontalAlignment="Left" Margin="548,378,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="100" Click="Button_Click"/>
        <TextBlock x:Name="txtTblok" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="201" Width="634" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>

        <!-- Time Display -->
        <TextBlock Grid.Row="0" Name="txtStopwatch" FontSize="48" FontWeight="Bold" 
          HorizontalAlignment="Left" Margin="292,15,0,195" Foreground="#FF0066CC"
          Text="00:00:00"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Margin="413,378,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="100" Click="stopBtn_Click"/>
        <Button x:Name="btnRec" Content="Record" HorizontalAlignment="Left" Margin="288,378,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="100" Click="btnRec_Click"/>
        <Button x:Name="prevBtn" Content="Previous" HorizontalAlignment="Left" Margin="151,378,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="100" Click="prevBtn_Click"/>
        <RadioButton x:Name="rb1" Content="24000 Hz" HorizontalAlignment="Left" Margin="268,349,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <RadioButton x:Name="rb2" Content="48000 Hz" HorizontalAlignment="Center" Margin="0,349,0,0" VerticalAlignment="Top" FontWeight="Bold" IsChecked="True"/>
        <Label Content="Sample Rate :" HorizontalAlignment="Left" Margin="151,339,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Folder Path :" HorizontalAlignment="Left" Margin="151,306,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Center" Margin="0,310,0,0"  Text="" VerticalAlignment="Top" Width="274" FontSize="16" FontWeight="Bold" />
        <Button x:Name="brouzBtn" Content="Browse" HorizontalAlignment="Left" Margin="550,309,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="100" Click="brouzBtn_Click" />
        <Label x:Name="userLbl_Copy" Content="Welcome " HorizontalAlignment="Left" Margin="21,2,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="LogoutBt" Content="LogOut" HorizontalAlignment="Left" Margin="677,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="100" Click="LogoutBt_Click"/>

    </Grid>
</Window>
